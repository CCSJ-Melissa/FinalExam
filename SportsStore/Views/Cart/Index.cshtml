@model CartIndexViewModel

<h2>Your Cart</h2>
<h1>This is the Index action of the ItemController</h1>
<table class=" table table-bordered table stripped" >
	<thead>
		<tr>
			<th>Quantity</th>
			<th>Item</th>
			<th class="text-right">Price</th>
			<th class="text-right">Sudtotal</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var line in Model.Cart.Lines) {
			<tr>
				<td class="text-center">@line.Quantity</td>
				<td class="text-left">@line.Item.Description</td>
				<td class="text-right">@line.Item.SellingPrice.ToString("c")</td>
				<td class="text-right">
					@((line.Quantity * line.Item.SellingPrice).ToString("c"))
				</td>
			</tr>
			}
	</tbody>
	<tfoot>
		<tr>
			<td coldspan="3" class="text-right">Total:</td>
			<td class="text-right">
				@Model.Cart.ComputeTotalValue().ToString("c")
			</td>
		</tr>
	</tfoot>
</table>
<div class="text-center">
			<a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping(Return to main page)</a>
	</div>


